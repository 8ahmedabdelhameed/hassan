<Page x:Class="try.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:try"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Username :" FontSize="50"></Label>
        <TextBox x:Name="nametxt" Width="300" Height="80"></TextBox>
        <Label Grid.Row="1" Content="Password :" FontSize="50"></Label>
        <TextBox x:Name="passtxt" Grid.Row="1" Width="300" Height="80"></TextBox>
        <Button Content="submit" FontSize="50" Width="200" Height="70" Margin="558,11,42,32" Grid.Row="2" Click="Button_Click"></Button>
        <Button Width="200" Margin="34,45,566,32" Grid.Row="2" Click="Button_Click_2"/>
        <Button Width="200" Margin="300,45,300,32" Grid.Row="2" Click="Button_Click_1"/>
    </Grid>
</Page>
