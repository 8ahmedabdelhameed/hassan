<Page x:Class="good.forget_password"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:good"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="forget_password">

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="40">UserName :</Label>
        <TextBox x:Name="name" Height="60" Width="200"></TextBox>
        <Label Grid.Row="1" FontSize="40">password:</Label>
        <Label Grid.Row="2" FontSize="30">Confrim Password:</Label>
        <TextBox x:Name="password" Grid.Row="1" Height="60" Width="200"></TextBox>
        <TextBox x:Name="cpassword" VerticalAlignment="Top" Grid.Row="2" Height="60" Width="200"></TextBox>
        <Button Grid.Row="3" Height="60" Width="200"  HorizontalAlignment="Center" FontSize="30" Click="Button_Click">Updated Pass</Button>
        <Button Grid.Row="0" Height="60" Width="200" Margin="500,30,0,11"  FontSize="30" Click="Button_Click_1"> back </Button>
    </Grid>
</Page>
