<Page x:Class="good.create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:good"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="create">

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="40">UserName :</Label>
        <TextBox x:Name="name" Height="60" Width="200"></TextBox>
        <Label Grid.Row="1" FontSize="40">password:</Label>
        <TextBox x:Name="password" Grid.Row="1" Height="60" Width="200"></TextBox>
        <Button Grid.Row="2" Height="60" Width="220" HorizontalAlignment="Center"  FontSize="30" Click="Button_Click_1">Create account</Button>
        <Button Grid.Row="2" Height="60" Width="120" HorizontalAlignment="Right" FontSize="30" Click="Button_Click">Sign in</Button>
    </Grid>
</Page>
